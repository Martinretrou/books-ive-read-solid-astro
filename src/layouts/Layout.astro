---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title} | Books I've read</title>
    <ViewTransitions />
  </head>
  <body class='font-sans bg-gray-50'>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "JetBrainsMono";
    src: url("/fonts/JetBrainsMono/JetBrainsMono-Bold.woff2") format("woff");
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "JetBrainsMono";
    src: url("/fonts/JetBrainsMono/JetBrainsMono-Light.woff2") format("woff");
    font-weight: light;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "JetBrainsMono";
    src: url("/fonts/JetBrainsMono/JetBrainsMono-Medium.woff2") format("woff");
    font-weight: 600;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "JetBrainsMono";
    src: url("/fonts/JetBrainsMono/JetBrainsMono-Regular.woff2") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "PixelifySans";
    src: url("/fonts/PixelifySans/PixelifySans-Regular.woff2") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "PlayfairDisplay";
    src: url("/fonts/PlayfairDisplay/PlayfairDisplay-Regular.woff2")
      format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .sans {
    font-family: "JetBrainsMono", serif;
  }

  .serif {
    font-family: "PlayfairDisplay", serif;
    line-height: 75%;
  }

  .pixel {
    font-family: "PixelifySans", sans-serif;
  }

  body::before {
    content: " ";
    position: fixed;
    z-index: 10;
    pointer-events: none;
    width: 100vw;
    height: 100vh;
    background-image: url(data:image/png;base64,);
  }

  .gradient-base {
    position: fixed;
    z-index: -10;
    left: 0;
    top: 0;
    width: 150vw;
    transform: scale(3.5);
    height: 100vh;
    background-size: 400%;
  }
  /* 
  .red-gradient {
    filter: contrast(450%) brightness(500%);
    background: conic-gradient(
        from 0deg at 116% 7%,
        rgba(67, 1, 1, 1),
        rgba(0, 0, 0, 0)
      ),
      url("data:image/svg+xml,%3Csvg viewBox='0 0 1 1' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    animation: filterGradient 12s infinite;
  } */

  .blue-gradient {
    filter: contrast(540%) brightness(300%);
    background: conic-gradient(
        from 0deg at 116% 7%,
        rgba(4, 54, 70, 1),
        rgba(0, 0, 0, 0)
      ),
      url("data:image/svg+xml,%3Csvg viewBox='0 0 1 1' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    animation: filterGradient 12s infinite;
  }

  .green-gradient {
    animation: filterGradient 12s infinite;
    filter: contrast(540%) brightness(300%);
    background: conic-gradient(
        from 0deg at 116% 7%,
        rgba(20, 70, 4, 1),
        rgba(0, 0, 0, 0)
      ),
      url("data:image/svg+xml,%3Csvg viewBox='0 0 1 1' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }

  .yellow-gradient {
    animation: filterGradient 12s infinite;
    filter: contrast(550%) brightness(1500%);
    background: conic-gradient(
        from 0deg at 116% 7%,
        rgba(80, 76, 0, 1),
        rgba(0, 0, 0, 0)
      ),
      url("data:image/svg+xml,%3Csvg viewBox='0 0 1 1' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }

  @keyframes filterGradient {
    20% {
      filter: contrast(350%) brightness(300%);
    }
    35% {
      filter: contrast(400%) brightness(1000%);
    }
    50% {
      filter: contrast(200%) brightness(700%);
    }
    70% {
      filter: contrast(350%) brightness(1200%);
    }
    80% {
      filter: contrast(370%) brightness(500%);
    }
  }

  /* @keyframes filterGradient {
    50% {
      filter: contrast(200%) brightness(1200%);
    }
  } */

  body {
    background: #333;
    background-image: linear-gradient(
        rgb(189, 189, 189) 0.1em,
        transparent 0.1em
      ),
      linear-gradient(90deg, rgba(189, 189, 189, 0.7) 0.1em, transparent 0.1em);
    background-size: 4vw 8vw;
  }

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  * {
    font-family: "JetBrainsMono", monospace, sans-serif;
  }

  .outlined {
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-width: 1px;
  }
</style>
